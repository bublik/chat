!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : 'Management'
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "management", media: "all", "data-turbolinks-track" => true
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = stylesheet_link_tag "management", media: "all", "data-turbolinks-track" => true
  %body
    = nav_bar brand: 'Management', brand_link: management_index_path, inverse: true, responsive: true do
      = menu_group do
        -#= menu_item 'Home', root_path
        = menu_divider
        = menu_item 'Categories', site_categories_path
        = menu_item 'Sites', sites_path
        = menu_item 'Contact', contact_path
      = menu_group(pull: 'right') do
        %p.navbar-text= raw user_header_auth_links
    .container
      = bootstrap_flash
      = yield
      = javascript_include_tag 'management', 'data-turbolinks-track' => true

