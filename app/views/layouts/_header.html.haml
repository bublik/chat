/ start header
%header
  .container
    / hidden top area toggle link
    #header-hidden-link
      %a.toggle-link{"data-target" => ".hidden-top", :href => "#", :title => "Click me you'll get a surprise"}
        %i
        Open
    / end toggle link
    .row.nomargin
      .span12
        .headnav
          %ul
            %li
              %a{"data-toggle" => "modal", :href => "#mySignup"}
                %i.icon-user
                Sign up
            %li
              %a{"data-toggle" => "modal", :href => "#mySignin"} Sign in
        / Signup Modal
        #mySignup.modal.styled.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "mySignupModalLabel", :role => "dialog", :tabindex => "-1"}
          .modal-header
            %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
            %h4#mySignupModalLabel
              Create an
              %strong account
          .modal-body
            = simple_form_for(Agent.new, :as => 'agent', :url => registration_path('agent')) do |f|
              = f.input :email, input_html: { autofocus: true, class: 'form-control', placeholder: 'Enter email' }
              = f.input :password, input_html: { class: 'form-control', placeholder: 'Password' }
              = f.input :password_confirmation, input_html: { class: 'form-control', placeholder: 'Password confirmation' }
              %div= f.submit 'Sign up', class: 'btn btn-primary'
            -#%form.form-horizontal
              .control-group
                %label.control-label{:for => "inputEmail"} Email
                .controls
                  %input#inputEmail{:placeholder => "Email", :type => "text"}/
              .control-group
                %label.control-label{:for => "inputSignupPassword"} Password
                .controls
                  %input#inputSignupPassword{:placeholder => "Password", :type => "password"}/
              .control-group
                %label.control-label{:for => "inputSignupPassword2"} Confirm Password
                .controls
                  %input#inputSignupPassword2{:placeholder => "Password", :type => "password"}/
              .control-group
                .controls
                  %button.btn{:type => "submit"} Sign up
                %p.aligncenter.margintop20
                  Already have an account?
                  %a{"aria-hidden" => "true", "data-dismiss" => "modal", "data-toggle" => "modal", :href => "#mySignin"} Sign in
        / end signup modal
        / Sign in Modal
        #mySignin.modal.styled.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "mySigninModalLabel", :role => "dialog", :tabindex => "-1"}
          .modal-header
            %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
            %h4#mySigninModalLabel
              Login to your
              %strong account
          .modal-body
            = simple_form_for(Agent.new, :as => 'agent', :url => session_path('agent')) do |f|
              = f.input :email, input_html: { autofocus: true, class: 'form-control'}
              = f.input :password
              = f.input :remember_me, as: :radio_buttons, input_html: { value: '1', inline_label: 'Yes, remember me'}
              %div= f.submit 'Sign in', :class => 'btn btn-primary'
            -#%form.form-horizontal
              .control-group
                %label.control-label{:for => "inputText"} Username
                .controls
                  %input#inputText{:placeholder => "Username", :type => "text"}/
              .control-group
                %label.control-label{:for => "inputSigninPassword"} Password
                .controls
                  %input#inputSigninPassword{:placeholder => "Password", :type => "password"}/
              .control-group
                .controls
                  %button.btn{:type => "submit"} Sign in
                %p.aligncenter.margintop20
                  Forgot password?
                  %a{"aria-hidden" => "true", "data-dismiss" => "modal", "data-toggle" => "modal", :href => "#myReset"} Reset
        / end signin modal
        / Reset Modal
        #myReset.modal.styled.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "myResetModalLabel", :role => "dialog", :tabindex => "-1"}
          .modal-header
            %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
            %h4#myResetModalLabel
              Reset your
              %strong password
          .modal-body
            %form.form-horizontal
              .control-group
                %label.control-label{:for => "inputResetEmail"} Email
                .controls
                  %input#inputResetEmail{:placeholder => "Email", :type => "text"}/
              .control-group
                .controls
                  %button.btn{:type => "submit"} Reset password
                %p.aligncenter.margintop20
                  We will send instructions on how to reset your password to your inbox
        / end reset modal
