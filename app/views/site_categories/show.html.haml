- model_class = SiteCategory
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @site_category.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), site_categories_path, :class => 'btn btn-link'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_site_category_path(@site_category), :class => 'btn btn-link'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), site_category_path(@site_category), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
