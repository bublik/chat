- content_for :head_line_title do
  Resend confirmation instructions
- content_for :head_line_content do
  %ul.breadcrumb
    %li= link_to(icon('icon-home' ), root_path) + icon('icon-angle-right')
    %li.active Reset Instruction

= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f|
  = f.input :email, input_html: { autofocus: true, class: 'form-control', placeholder: 'Enter email' }
  %div= f.submit "Resend confirmation instructions", class: 'btn btn-primary'
  .row
    .span4= render "devise/shared/links"
