- content_for :head_line_title do
  Forgot your password?
- content_for :head_line_content do
  %ul.breadcrumb
    %li= link_to(icon('icon-home' ), root_path) + icon('icon-angle-right')
    %li.active Recover password

.row
  .span7.offset3
    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      = f.input :email, :input_html => {:autofocus => true, :placeholder => 'Email'}
      .row
        .span4.offset1{style: 'text-align: center'}= f.submit "Send me reset password instructions", :class => 'center btn btn-warning'
      .row
        .span5= render "devise/shared/links"
