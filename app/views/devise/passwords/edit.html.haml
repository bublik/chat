- content_for :head_line_title do
  Change your password
- content_for :head_line_content do
  %ul.breadcrumb
    %li= link_to(icon('icon-home' ), root_path) + icon('icon-angle-right')
    %li.active Change password

= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
  = f.hidden_field :reset_password_token
  = f.input :password, input_html: { autofocus: true,  class: 'form-control', placeholder: 'New Password' }
  = f.input :password_confirmation, input_html: { autofocus: true,  class: 'form-control', placeholder: 'Confirm new password' }
  %div= f.submit "Change my password", class: 'btn btn-primary'
  .row
    .span4= render "devise/shared/links"
