- content_for :head_line_title do
  = t('devise.titles.sign_up')
- content_for :head_line_content do
  %ul.breadcrumb
    %li= link_to(icon('icon-home' ), root_path) + icon('icon-angle-right')
    %li.active= t('devise.titles.sign_up')

.row
  .span7.offset3
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = f.input :email, input_html: { autofocus: true, class: 'form-control', placeholder: 'Enter email' }
      = f.hidden_field :plan, :value => params[:plan]
      = f.input :password, input_html: { class: 'form-control', placeholder: 'Password' }
      = f.input :password_confirmation, input_html: { class: 'form-control', placeholder: 'Password confirmation' }
      .row
        .span2.offset2= f.submit t('global.send'), class: 'btn btn-primary'

= render 'devise/shared/links'